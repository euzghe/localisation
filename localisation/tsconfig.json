{
    "extends": "../evolution/configs/react.tsconfig.json",
    "compilerOptions": {
        "outDir": "lib",
        "rootDir": "src",
        "isolatedModules": false, // TODO: Should be removed to inherit the true eventually
        "noImplicitAny": false, // TODO: Should be removed to inherit the true eventually
        "strict": false, // TODO: Remove when classes are typed
        "target": "es6"
    },
    "include": [
        "src/**/*",
        "src/**/*.geojson"
    ],
    "exclude": [
        "node_modules",
        "**/__tests__",
        "**/*.test.ts"
    ]
}
